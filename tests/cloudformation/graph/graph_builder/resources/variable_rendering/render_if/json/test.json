{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Parameters": {
        "EnvType": {
            "Description": "Environment type.",
            "Default": "dev",
            "Type": "String"
        },
        "InstanceSize": {
            "Description": "EC2 Instance small Size",
            "Type": "String",
            "Default": "m1.large"
        }
    },
    "Conditions": {
        "CreateProdResources": {
            "Fn::Equals": [
                {
                    "Ref": "EnvType"
                },
                "prod"
            ]
        },
        "CreateDevResources": {
            "Fn::Equals": [
                {
                    "Ref": "EnvType"
                },
                "dev"
            ]
        }
    },
    "Resources": {
        "EC2Instance": {
            "Type": "AWS::EC2::Instance",
            "Properties": {
                "Tags": [
                  {
                    "Key": "yor_trace",
                    "Value": "4477280b-2a92-4463-828f-b48d0bbc9ca9"
                  }
                ],
                "InstanceType": {
                    "Fn::If": [
                        "CreateProdResources",
                        "c1.xlarge",
                        {
                            "Fn::If": [
                                "CreateDevResources",
                                {
                                    "Ref": "InstanceSize"
                                },
                                "m1.small"
                            ]
                        }
                    ]
                }
            }
        },
        "S3BucketSuspended": {
            "Type": "AWS::S3::Bucket",
            "Properties": {
                "Tags": [
                  {
                    "Key": "yor_trace",
                    "Value": "98d4068c-07ab-4403-bd7e-4a1942ae8b59"
                  }
                ],
                "VersioningConfiguration": {
                    "Status": {
                        "Fn::If": [
                            "CreateProdResources",
                            "Enabled",
                            "Suspended"
                        ]
                    }
                }
            }
        },
        "S3BucketEnabled": {
            "Type": "AWS::S3::Bucket",
            "Properties": {
                "Tags": [
                  {
                    "Key": "yor_trace",
                    "Value": "84ccd51f-4cfe-48a6-a233-d3f4e452d7ec"
                  }
                ],
                "VersioningConfiguration": {
                    "Status": {
                        "Fn::If": [
                            "CreateDevResources",
                            "Enabled",
                            "Suspended"
                        ]
                    }
                }
            }
        }
    }
}